// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Producer {
  id              Int      @id @default(autoincrement())
  cpfOrCnpj       String   @unique
  producerName    String
  farmName        String
  city            String
  state           String
  slug            String   @unique
  totalAreaFarm   Float
  vegetationArea  Float
  cropsPlanted    String[] @db.Text  // Armazenado como texto, tratado como array no c√≥digo
}